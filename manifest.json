{
  // Required
  "manifest_version": 2,
  "name": "Test-task Search Extension",
  "version": "1.0.0",

  // Recommended
  // "default_locale": "ru",
  "description": "Расширение поиска через Гугл или Яндекс",
  "icons": {
    "16": "img/icon_16.png",
    "32": "img/icon_32.png",
    "128": "img/icon_128.png"
  },

  // Pick one (or none)
  "browser_action": {
    "default_title": "SearchExt", // Заголовок, который отображается при наведении
    "default_icon": "img/icon_32.png", // Иконка для отображения
    "default_popup": "popup.html"// страница (окно), которая будет отображаться при клике на иконку
  },

  // Optional
  "author": "Arseniy Kudryavtsev",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "permissions": ["tabs", "storage"],
  
  "short_name": "SearchExt"
}